generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int        @id @default(autoincrement())
  name      String
  avatar    String?
  email     String     @unique
  age       Int?
  city      String?
  address   String?
  password  String
  phone     String?
  role      String?    @default("user")
  order     Order[]
  tokenPair TokenPair?
  review    Review[]
}

model Restaurant {
  id     Int      @id @default(autoincrement())
  name   String
  dish   Dish[]
  order  Order[]
  review Review[]
}

model Order {
  id           Int         @id @default(autoincrement())
  user         User        @relation(fields: [userId], references: [id])
  userId       Int
  restaurant   Restaurant? @relation(fields: [restaurantId], references: [id])
  restaurantId Int?
  dish         Dish[]
  createdAt    DateTime
}

model Dish {
  id            Int           @id @default(autoincrement())
  image         String?
  name          String
  price         Int
  weight        Int?
  description   String
  quantity_sold Int?          @default(0)
  locality      Locality?     @relation(fields: [localityId], references: [id])
  localityId    Int
  ingredients   Ingredients[]
  order         Order?        @relation(fields: [orderId], references: [id])
  orderId       Int?
  Restaurant    Restaurant?   @relation(fields: [restaurantId], references: [id])
  restaurantId  Int?
}

model Locality {
  id   Int    @id @default(autoincrement())
  name String
  Dish Dish[]
}

model Ingredients {
  id     Int    @id @default(autoincrement())
  name   String
  dish   Dish?  @relation(fields: [dishId], references: [id])
  dishId Int?
}

model Review {
  id           Int         @id @default(autoincrement())
  body         String
  rating       Int?
  user         User?       @relation(fields: [userId], references: [id])
  userId       Int?
  restaurant   Restaurant? @relation(fields: [restaurantId], references: [id])
  restaurantId Int?
}

model TokenPair {
  id           Int    @id @default(autoincrement())
  accessToken  String
  refreshToken String
  author       User?  @relation(fields: [authorId], references: [id])
  authorId     Int?   @unique
}

